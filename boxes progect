cargo = [
    {"kilometer": 3, "weight": 200},
    {"kilometer": 5, "weight": 300},
    {"kilometer": 6, "weight": 213}
]

required_weight = 713
def check_cargo(locations):
    total_weight = 0
    for loc in locations:
        for box in cargo:
            if box['kilometer'] == loc:
                total_weight += box['weight']
                box['kilometer'] += 1  #

